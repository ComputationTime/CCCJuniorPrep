N = int(input())
yesterday = input()
today = input()

count = 0

for letterA, letterB in zip(yesterday, today):
    if letterA == 'C' and letterA == letterB:
        count += 1
# alternative
# for i in range(N):
#     letterA = yesterday[i]
#     letterB = today[i]
#     if letterA == 'C' and letterA == letterB:
#         count += 1

print(count)

